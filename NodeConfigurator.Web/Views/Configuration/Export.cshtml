@{
    ViewData["Title"] = "Export";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h2>
                <i class="bi bi-download"></i> Konfiguration exportieren
            </h2>

            <div class="card mt-4">
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle-fill"></i>
                        Sie haben <strong>@ViewBag.SelectedNodesCount</strong> Variablen ausgewählt.
                    </div>

                    @if (ViewBag.SelectedNodesCount > 0)
                    {
                        <h5 class="mt-4">Export-Formate</h5>
                        <div class="row mt-3">
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-file-earmark-code" style="font-size: 3rem; color: #0078D4;"></i>
                                        <h5 class="card-title mt-3">JSON</h5>
                                        <p class="card-text">Strukturierte Daten mit Metadaten</p>
                                        <form asp-action="DownloadJson" method="post">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-download"></i> JSON herunterladen
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-file-earmark-xml" style="font-size: 3rem; color: #107C10;"></i>
                                        <h5 class="card-title mt-3">XML</h5>
                                        <p class="card-text">Standardisiertes XML-Format</p>
                                        <form asp-action="DownloadXml" method="post">
                                            <button type="submit" class="btn btn-success">
                                                <i class="bi bi-download"></i> XML herunterladen
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-file-earmark-spreadsheet" style="font-size: 3rem; color: #E81123;"></i>
                                        <h5 class="card-title mt-3">CSV</h5>
                                        <p class="card-text">Kompatibel mit Excel</p>
                                        <form asp-action="DownloadCsv" method="post">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-download"></i> CSV herunterladen
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="text-center">
                            <form asp-action="ClearSelection" method="post" onsubmit="return confirm('Möchten Sie wirklich alle ausgewählten Variablen löschen?');">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i> Auswahl löschen
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="text-center my-4">
                            <i class="bi bi-inbox" style="font-size: 4rem; color: #999;"></i>
                            <p class="mt-3">Keine Variablen ausgewählt. Bitte zuerst Variablen auswählen.</p>
                            <a href="@Url.Action("Browse", "OpcUa")" class="btn btn-primary">
                                <i class="bi bi-tree-fill"></i> Zum Browser
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
