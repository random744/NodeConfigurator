<Window x:Class="NodeConfigurator.Views.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verbindungseinstellungen" 
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Server Connection -->
                <GroupBox Header="Server-Verbindung">
                    <StackPanel>
                        <TextBlock Text="Server URL:" Margin="0,5,0,2" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding RecentUrls}"
                                  SelectedItem="{Binding ServerUrl}"
                                  IsEditable="True"
                                  Style="{StaticResource ModernComboBox}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Authentication -->
                <GroupBox Header="Authentifizierung">
                    <StackPanel>
                        <CheckBox Content="Authentifizierung verwenden" 
                                  IsChecked="{Binding UseAuthentication}"
                                  Margin="0,5"/>
                        
                        <TextBlock Text="Benutzername:" 
                                   Margin="0,10,0,2" 
                                   FontWeight="SemiBold"
                                   IsEnabled="{Binding UseAuthentication}"/>
                        <TextBox Text="{Binding Username}"
                                 Style="{StaticResource ModernTextBox}"
                                 IsEnabled="{Binding UseAuthentication}"/>
                        
                        <TextBlock Text="Passwort:" 
                                   Margin="0,10,0,2" 
                                   FontWeight="SemiBold"
                                   IsEnabled="{Binding UseAuthentication}"/>
                        <PasswordBox x:Name="PasswordBox"
                                     IsEnabled="{Binding UseAuthentication}"
                                     Padding="8,6"
                                     BorderThickness="1"
                                     BorderBrush="{StaticResource BorderBrush}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Security Settings -->
                <GroupBox Header="Sicherheitseinstellungen">
                    <StackPanel>
                        <TextBlock Text="Security Mode:" Margin="0,5,0,2" FontWeight="SemiBold"/>
                        <ComboBox SelectedItem="{Binding SecurityMode}"
                                  Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="None" IsSelected="True"/>
                            <ComboBoxItem Content="Sign"/>
                            <ComboBoxItem Content="SignAndEncrypt"/>
                        </ComboBox>

                        <TextBlock Text="Security Policy:" Margin="0,10,0,2" FontWeight="SemiBold"/>
                        <ComboBox SelectedItem="{Binding SecurityPolicy}"
                                  Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="None" IsSelected="True"/>
                            <ComboBoxItem Content="Basic128Rsa15"/>
                            <ComboBoxItem Content="Basic256"/>
                            <ComboBoxItem Content="Basic256Sha256"/>
                        </ComboBox>

                        <CheckBox Content="Zertifikate automatisch akzeptieren" 
                                  IsChecked="{Binding AutoAcceptCertificates}"
                                  Margin="0,10"/>
                    </StackPanel>
                </GroupBox>

                <!-- Advanced Settings -->
                <GroupBox Header="Erweiterte Einstellungen">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Timeout (ms):" Margin="0,5,0,2" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding Timeout}"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Session Timeout (ms):" Margin="0,5,0,2" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding SessionTimeout}"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="ðŸ”§ Verbindung testen"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding TestConnectionCommand}"
                    Padding="10,6"/>

            <Button Grid.Column="2"
                    Content="OK"
                    Style="{StaticResource ModernButton}"
                    IsDefault="True"
                    Click="OkButton_Click"
                    MinWidth="80"
                    Margin="0,0,10,0"/>

            <Button Grid.Column="3"
                    Content="Abbrechen"
                    Style="{StaticResource SecondaryButton}"
                    IsCancel="True"
                    MinWidth="80"/>
        </Grid>
    </Grid>
</Window>
