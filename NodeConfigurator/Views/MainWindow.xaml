<Window x:Class="NodeConfigurator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NodeConfigurator.ViewModels"
        Title="NodeConfigurator - OPC-UA Variable Manager" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="Datei">
                <MenuItem Header="Konfiguration laden..." Command="{Binding LoadConfigurationCommand}"/>
                <MenuItem Header="Konfiguration speichern..." Command="{Binding SaveConfigurationCommand}"/>
                <Separator/>
                <MenuItem Header="Exportieren">
                    <MenuItem Header="Als JSON..." Command="{Binding ExportJsonCommand}"/>
                    <MenuItem Header="Als XML..." Command="{Binding ExportXmlCommand}"/>
                    <MenuItem Header="Als CSV..." Command="{Binding ExportCsvCommand}"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Beenden" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Bearbeiten">
                <MenuItem Header="Alle auswÃ¤hlen" Command="{Binding SelectAllCommand}"/>
                <MenuItem Header="Auswahl aufheben" Command="{Binding DeselectAllCommand}"/>
                <MenuItem Header="Auswahl lÃ¶schen" Command="{Binding ClearSelectionCommand}"/>
            </MenuItem>
            <MenuItem Header="Ansicht">
                <MenuItem Header="Baum aktualisieren" Command="{Binding RefreshTreeCommand}"/>
                <MenuItem Header="Alle erweitern" Command="{Binding ExpandAllCommand}"/>
                <MenuItem Header="Alle reduzieren" Command="{Binding CollapseAllCommand}"/>
            </MenuItem>
            <MenuItem Header="Hilfe">
                <MenuItem Header="Dokumentation" Command="{Binding DocumentationCommand}"/>
                <MenuItem Header="Ãœber" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="1" Padding="5">
            <Label Content="Server URL:" VerticalAlignment="Center"/>
            <ComboBox Width="300" 
                      Style="{StaticResource ModernComboBox}"
                      ItemsSource="{Binding ServerUrls}"
                      SelectedItem="{Binding SelectedServerUrl}"
                      IsEditable="True"
                      VerticalAlignment="Center"/>
            <Button Content="âš™ï¸ Einstellungen" 
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding OpenConnectionDialogCommand}"
                    Margin="5,0"/>
            <Separator/>
            <Button Content="ðŸ”Œ Verbinden" 
                    Style="{StaticResource ModernButton}"
                    Command="{Binding ConnectCommand}"
                    Margin="5,0"/>
            <Button Content="âŒ Trennen" 
                    Style="{StaticResource DangerButton}"
                    Command="{Binding DisconnectCommand}"
                    Margin="5,0"/>
            <Separator/>
            <Label Content="Status:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <Ellipse Width="16" Height="16" 
                     Fill="{Binding StatusColor}"
                     VerticalAlignment="Center">
                <Ellipse.Effect>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="0" Color="Black" Opacity="0.3"/>
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock Text="{Binding StatusText}" 
                       VerticalAlignment="Center"
                       Margin="5,0"
                       FontWeight="SemiBold"/>
        </ToolBar>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: TreeView -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <Border Grid.Row="0" 
                        Background="White"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Margin="5"
                        Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 VerticalAlignment="Center">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button Grid.Column="1"
                                Content="ðŸ” Suchen"
                                Style="{StaticResource ModernButton}"
                                Command="{Binding SearchCommand}"
                                Margin="5,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Filter Options -->
                <Border Grid.Row="1"
                        Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Margin="5,0,5,5"
                        Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Filter:" 
                                   VerticalAlignment="Center" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,10,0"/>
                        <CheckBox Content="Variablen" 
                                  IsChecked="{Binding ShowVariables}"
                                  Margin="5,0"/>
                        <CheckBox Content="Objekte" 
                                  IsChecked="{Binding ShowObjects}"
                                  Margin="5,0"/>
                        <CheckBox Content="Methoden" 
                                  IsChecked="{Binding ShowMethods}"
                                  Margin="5,0"/>
                    </StackPanel>
                </Border>

                <!-- TreeView -->
                <Border Grid.Row="2"
                        Background="White"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Margin="5,0,5,5">
                    <TreeView x:Name="NodeTreeView"
                              ItemsSource="{Binding RootNodes}"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <!-- Checkbox for Variables -->
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              Visibility="{Binding CanBeSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                                              Margin="0,0,5,0"
                                              VerticalAlignment="Center"/>
                                    
                                    <!-- Icon -->
                                    <TextBlock Text="{Binding NodeClass, Converter={StaticResource NodeClassToIconConverter}}"
                                               FontSize="16"
                                               Margin="0,0,5,0"
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- Name -->
                                    <TextBlock Text="{Binding DisplayName}"
                                               VerticalAlignment="Center"
                                               FontWeight="Medium"/>
                                    
                                    <!-- DataType Badge -->
                                    <Border Background="{StaticResource PrimaryBrush}"
                                            CornerRadius="3"
                                            Padding="5,2"
                                            Margin="8,0,0,0"
                                            Visibility="{Binding ShowDataType, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding DataType}"
                                                   Foreground="White"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Border>
            </Grid>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Stretch"
                          Background="{StaticResource BorderBrush}"/>

            <!-- Right Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Details Panel -->
                <GroupBox Grid.Row="0" Header="Details" Margin="5,5,5,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="5">
                            <TextBlock Text="Kein Knoten ausgewÃ¤hlt"
                                       Visibility="{Binding HasSelectedNode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                       Foreground="{StaticResource LightTextBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="20"/>
                            
                            <StackPanel Visibility="{Binding HasSelectedNode, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="DisplayName:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                                <TextBox Text="{Binding SelectedNode.DisplayName, Mode=OneWay}"
                                         Style="{StaticResource ModernTextBox}"
                                         IsReadOnly="True"/>

                                <TextBlock Text="BrowseName:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                                <TextBox Text="{Binding SelectedNode.BrowseName, Mode=OneWay}"
                                         Style="{StaticResource ModernTextBox}"
                                         IsReadOnly="True"/>

                                <TextBlock Text="NodeId:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                                <TextBox Text="{Binding SelectedNode.NodeId, Mode=OneWay}"
                                         Style="{StaticResource ModernTextBox}"
                                         IsReadOnly="True"/>

                                <TextBlock Text="NodeClass:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                                <TextBox Text="{Binding SelectedNode.NodeClass, Mode=OneWay}"
                                         Style="{StaticResource ModernTextBox}"
                                         IsReadOnly="True"/>

                                <TextBlock Text="DataType:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                                <TextBox Text="{Binding SelectedNode.DataType, Mode=OneWay}"
                                         Style="{StaticResource ModernTextBox}"
                                         IsReadOnly="True"/>

                                <TextBlock Text="Aktueller Wert:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                                <TextBox Text="{Binding SelectedNode.CurrentValue, Mode=OneWay}"
                                         Style="{StaticResource ModernTextBox}"
                                         IsReadOnly="True"/>

                                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                    <Button Content="ðŸ“– Wert lesen"
                                            Style="{StaticResource ModernButton}"
                                            Command="{Binding ReadValueCommand}"
                                            Margin="0,0,5,0"/>
                                    <Button Content="âœï¸ Wert schreiben"
                                            Style="{StaticResource SecondaryButton}"
                                            Command="{Binding WriteValueCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>

                <!-- GridSplitter -->
                <GridSplitter Grid.Row="1"
                              Height="5"
                              HorizontalAlignment="Stretch"
                              Background="{StaticResource BorderBrush}"/>

                <!-- Selected Variables Panel -->
                <GroupBox Grid.Row="2" Header="AusgewÃ¤hlte Variablen" Margin="5,0,5,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ListView Grid.Row="0"
                                  ItemsSource="{Binding SelectedVariables}"
                                  Background="White">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding DisplayName}" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding NodeId}" 
                                                       FontSize="11"
                                                       Foreground="{StaticResource LightTextBrush}"/>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Content="âŒ"
                                                Style="{StaticResource DangerButton}"
                                                Command="{Binding DataContext.RemoveSelectedVariableCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Padding="5,2"
                                                ToolTip="Entfernen"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <Button Grid.Row="1"
                                Content="Alle lÃ¶schen"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding ClearSelectionCommand}"
                                Margin="5"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="AusgewÃ¤hlte Variablen: "/>
                    <TextBlock Text="{Binding SelectedNodesCount}" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Gesamte Knoten: "/>
                    <TextBlock Text="{Binding TotalNodesCount}" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="150" Height="16"
                             IsIndeterminate="True"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
